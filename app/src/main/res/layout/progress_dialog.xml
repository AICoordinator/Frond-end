<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".ProgressDialog"
        android:background="@color/bg_progress">
    <com.github.ybq.android.spinkit.SpinKitView
            android:id="@+id/spinKit" android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/SpinKitView.Large.Circle"
            android:layout_gravity="center" app:SpinKit_Color="@android:color/transparent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"/>

    <TextView android:id="@+id/textView" android:layout_width="wrap_content"
              android:layout_height="wrap_content" android:layout_marginTop="24dp"
              android:text="Loading..."
              android:textColor="#ffffff" android:gravity="center"
              app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintTop_toBottomOf="@+id/spinKit"/>

</LinearLayout>