<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Activity.SignUpActivity" android:background="#ffffff">
    <ImageView android:layout_width="185dp" android:layout_height="32dp" app:layout_constraintTop_toTopOf="parent"
               android:layout_marginTop="79dp" app:layout_constraintStart_toStartOf="parent"
               android:layout_marginStart="114dp" android:src="@drawable/logo"/>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent" android:layout_height="70dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="165dp"
            android:layout_marginStart="29dp"
            android:elevation="2dp"
            android:background="@drawable/border" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="29dp">
        <TextView android:layout_width="37dp" android:layout_height="20dp" app:layout_constraintTop_toTopOf="parent"
                  app:layout_constraintStart_toStartOf="parent"
                  android:layout_marginTop="10dp" android:layout_marginStart="16dp" android:text="Email"
                  android:textColor="#979797" android:lineHeight="20.27dp"
                  android:textFontWeight="400"/>
        <EditText
                android:layout_width="324dp"
                android:layout_height="23dp"
                android:inputType="textEmailAddress"
                android:ems="10"
                android:id="@+id/emailTextView" android:minHeight="23dp"
                android:textColor="#000000" android:textColorHint="#979797"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="34dp"
                android:layout_marginStart="16dp"
                android:background="@null"/>
        <View android:layout_width="match_parent" android:layout_height="1dp"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintTop_toTopOf="parent"
              android:layout_marginTop="59dp"
              android:layout_marginStart="16dp"
              android:background="#e2e2e2"
              app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent" android:layout_height="70dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="248dp"
            android:layout_marginStart="29dp"
            android:elevation="2dp"
            android:background="@drawable/border" android:layout_marginEnd="29dp"
            app:layout_constraintEnd_toEndOf="parent">

        <TextView android:layout_width="63dp" android:layout_height="20dp" app:layout_constraintTop_toTopOf="parent"
                  app:layout_constraintStart_toStartOf="parent"
                  android:layout_marginTop="10dp" android:layout_marginStart="16dp" android:text="Password1"
                  android:textColor="#979797" android:lineHeight="20.27dp" android:textSize="14dp"
                  android:textFontWeight="400"/>
        <EditText
                android:layout_width="324dp"
                android:layout_height="23dp"
                android:inputType="textPassword"
                android:ems="10"
                android:id="@+id/passwordTextView1" android:minHeight="23dp"
                android:textColor="#000000" android:textColorHint="#979797"
                android:textSize="16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="34dp"
                android:layout_marginStart="16dp"
                android:background="@null"/>
        <View android:layout_width="match_parent" android:layout_height="1dp"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintTop_toTopOf="parent"
              android:layout_marginTop="59dp"
              android:layout_marginStart="16dp"
              android:background="#e2e2e2"
              app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent" android:layout_height="70dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="331dp"
            android:layout_marginStart="29dp"
            android:elevation="2dp"
            android:background="@drawable/border" android:layout_marginEnd="29dp"
            app:layout_constraintEnd_toEndOf="parent">

        <TextView android:layout_width="63dp" android:layout_height="20dp" app:layout_constraintTop_toTopOf="parent"
                  app:layout_constraintStart_toStartOf="parent"
                  android:layout_marginTop="10dp" android:layout_marginStart="16dp" android:text="Password2"
                  android:textColor="#979797" android:lineHeight="20.27dp" android:textSize="14dp"
                  android:textFontWeight="400"/>
        <EditText
                android:layout_width="324dp"
                android:layout_height="23dp"
                android:inputType="textPassword"
                android:ems="10"
                android:id="@+id/passwordTextView2" android:minHeight="23dp"
                android:textColor="#000000" android:textColorHint="#979797"
                android:textSize="16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="34dp"
                android:layout_marginStart="16dp"
                android:background="@null"/>
        <View android:layout_width="match_parent" android:layout_height="1dp"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintTop_toTopOf="parent"
              android:layout_marginTop="59dp"
              android:layout_marginStart="16dp"
              android:background="#e2e2e2"
              app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent" android:layout_height="70dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="414dp"
            android:layout_marginStart="29dp"
            android:elevation="2dp"
            android:background="@drawable/border" android:layout_marginEnd="29dp"
            app:layout_constraintEnd_toEndOf="parent">

        <TextView android:layout_width="63dp" android:layout_height="20dp" app:layout_constraintTop_toTopOf="parent"
                  app:layout_constraintStart_toStartOf="parent"
                  android:layout_marginTop="10dp" android:layout_marginStart="16dp" android:text="성별"
                  android:textColor="#979797" android:lineHeight="20.27dp" android:textSize="14dp"
                  android:textFontWeight="400"/>
        <RadioGroup android:id="@+id/genderGroup" android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:orientation="horizontal" app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="34dp" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="190dp">
            <RadioButton android:layout_width="wrap_content" android:layout_height="wrap_content"
                         android:text="남자" android:id="@+id/manBtn" android:layout_marginRight="30dp"/>
            <RadioButton android:layout_width="wrap_content" android:layout_height="wrap_content"
                         android:text="여자" android:id="@+id/womanBtn"/>
        </RadioGroup>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent" android:layout_height="70dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="497dp"
            android:layout_marginStart="29dp"
            android:elevation="2dp"
            android:background="@drawable/border" android:layout_marginEnd="29dp"
            app:layout_constraintEnd_toEndOf="parent">

        <TextView android:layout_width="63dp" android:layout_height="20dp" app:layout_constraintTop_toTopOf="parent"
                  app:layout_constraintStart_toStartOf="parent"
                  android:layout_marginTop="10dp" android:layout_marginStart="16dp" android:text="별명"
                  android:textColor="#979797" android:lineHeight="20.27dp" android:textSize="14dp"
                  android:textFontWeight="400"/>
        <EditText
                android:layout_width="324dp"
                android:layout_height="23dp"
                android:inputType="text"
                android:ems="10"
                android:id="@+id/nickNameTextView" android:minHeight="23dp"
                android:textColor="#000000" android:textColorHint="#979797"
                android:textSize="16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="34dp"
                android:layout_marginStart="16dp"
                android:background="@null"/>
        <View android:layout_width="match_parent" android:layout_height="1dp"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintTop_toTopOf="parent"
              android:layout_marginTop="59dp"
              android:layout_marginStart="16dp"
              android:background="#e2e2e2"
              app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <Button android:layout_width="match_parent" android:layout_height="42dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="603dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="29dp" android:layout_marginEnd="29dp"
            app:layout_constraintEnd_toEndOf="parent" android:text="SIGN UP"
            android:textColor="#ffffff" android:id="@+id/signUpBtn"
            android:background="@drawable/buttonborder" app:circularflow_radiusInDP="10dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>